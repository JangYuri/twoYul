<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_back_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/main_map"
        android:scaleType="fitCenter"/>
    <!--핀들-->
    <include android:id="@+id/hadong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />
    <include android:id="@+id/incheon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />

    <include android:id="@+id/busan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />
    <include android:id="@+id/jeju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />


    <include android:id="@+id/greenpower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.33"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />
    <include android:id="@+id/youngwol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />
    <include android:id="@+id/andong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/pin"
        app:layout_constraintVertical_bias="0.48"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_map"
        app:layout_constraintRight_toRightOf="@id/img_back_map"
        app:layout_constraintLeft_toLeftOf="@id/img_back_map"
        app:layout_constraintTop_toTopOf="@id/img_back_map"
        />



    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="#00000000"
        android:padding="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"
        android:src="@drawable/information"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/img_sample_left"
        android:layout_width="28dp"
        android:layout_height="23dp"
        android:src="@drawable/sample_left"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/tv_sample_left"
        app:layout_constraintTop_toTopOf="@id/tv_sample_left"
        app:layout_constraintBottom_toBottomOf="@id/tv_sample_left"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_sample_left"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="; 오염물질 농도"
        android:textColor="#3f3f3f"
        android:textSize="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/img_sample_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_sample_right"
        app:layout_constraintTop_toBottomOf="@id/img_back_map"/>


    <ImageView
        android:id="@+id/img_sample_right"
        android:layout_width="28dp"
        android:layout_height="23dp"
        android:src="@drawable/sample_right"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/img_sample_left"
        app:layout_constraintRight_toLeftOf="@id/tv_sample_right"
        app:layout_constraintTop_toTopOf="@id/tv_sample_right"
        app:layout_constraintBottom_toBottomOf="@id/tv_sample_right"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_sample_right"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="; 대기상태"
        android:textColor="#3f3f3f"
        android:textSize="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/img_sample_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sample_left"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>